export ZDOTDIR=$HOME/dotfiles/zsh
. $ZDOTDIR/zsh-selected
. $ZDOTDIR/zshrc-$ZSH_SELECTED

if [[ -e "$ZDOTDIR/local.zsh" ]]; then
  . $ZDOTDIR/local.zsh
fi

export PATH=$PATH:$ZDOTDIR/bin

# let Prezto point to the default history file (as oh-my-zsh)
HISTFILE=$HOME/.zsh_history

# Temporary hack in airship13 to make rails work
[[ -s "$HOME/.rvm/scripts/rvm" ]] && . "$HOME/.rvm/scripts/rvm"

# Enable iTerm's Timestamp by default
if [ $TERM_PROGRAM = "iTerm.app" ]; then
  osascript -e 'tell application "System Events" to keystroke "e" using {command down, shift down}'
fi
